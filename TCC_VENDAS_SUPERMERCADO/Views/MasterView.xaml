<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC_VENDAS_SUPERMERCADO.Views.MasterView"
             Title = "Perfil">
    <TabbedPage.Children>
        <ContentPage Title="Usuario">
            <Frame OutlineColor ="Silver"
           VerticalOptions="CenterAndExpand"
           Margin="15">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Nome"></Label>
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                    <Label Text="Email"></Label>
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                    <Button Text="Perfil">
                    </Button>
                    <Button Text="Meus Pedidos"></Button>
                    <Button Text="Teste blablabal"></Button>
                </StackLayout>
            </Frame>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>